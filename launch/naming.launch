<launch>

   <arg
      name = "speaker"
      default = "Ari"
   />
   <arg
      name = "looper"
      default = "5"
   />

   <node 
      pkg="beginner_tutorials"
      type="talker"
      name="talking_node"
      respawn = "true"
      output = "screen"
   >
      <param name="speaker" value="$(arg speaker)" />
      <param name="looper" value="$(arg looper)" />
   </node>
   
   <node 
      pkg="beginner_tutorials"
      type="listener"
      name="listening_node"
      respawn = "true"
      output = "screen"
   />
</launch>
